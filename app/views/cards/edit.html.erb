<div class="container">
<h1 class="title">New Card</h1>

<%= form_with(model: @card, url:board_card_path, method: 'put', local: true) do |f| %>
    <div>
      <%= f.label :name, 'Sentence', class: 'text' %>
    </div>
    <div>
      <%= f.text_field :name, class: 'text' %>
    </div>
    <div>
      <%= f.label :description, 'Memo', class: 'text' %>
    </div>
    <div>
      <%= f.text_area :description, class: 'text' %>
    </div>

  

    <%= f.submit 'Submit', class: 'submit' %>
<% end %>

</div>